@model ReservationSystem.Models.Reservation.IndexModel

@{
    ViewBag.Title = "Reservations";
    Layout = "_Layout";
}

<table class="table">
    <thead>
    <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Fee</th>
        <th>E-mail</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var reservation in Model.Reservations)
    {
        <tr id="row-@reservation.Id">
            @await Html.PartialAsync("ReservationRow", reservation)
        </tr>
    }
    </tbody>
</table>

<button class="btn btn-primary" hx-post="/Reservation/Test">Get test Data</button>